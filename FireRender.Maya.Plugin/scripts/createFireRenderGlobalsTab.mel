global proc frAddAOV(string $name)
{
	string $pass_name = $name + "_pass";
	string $pass_node;
	if (size(`ls $pass_name`))
		$pass_node = $pass_name;
	else
	{
		$pass_node = `createNode -name $pass_name RPRRenderPass`;
	}
}


